@model IEnumerable<Miniproyecto___Bertoni_Solutions.Models.Photo>

@{
    ViewBag.Title = "Photos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Fotos</h2>

@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Título
            </th>
            <th>
                Foto
            </th>
            <th>
                Acciones
            </th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                <img src=@item.url alt=@item.title width="120px" height="120px"/>
            </td>
            <td>
                <a href="@Url.Action("Index", "Comments", new { PhotoId = item.id })">Ver Commentarios</a>
            </td>
        </tr>
    }
    </table>
}
else
{
    <p>No se encontraron resultados</p>
}